{
  "manifest_version": 3,
  "name": "Whiteboard Capture",
  "version": "1.0.0",
  "description": "Capture tabs and bookmarks to your whiteboard workspace.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "http://localhost:3001/*",
        "http://localhost:3002/*",
        "http://localhost:3003/*",
        "http://localhost:3004/*",
        "http://localhost:3005/*"
      ],
      "js": ["content.js"]
    }
  ]
}
